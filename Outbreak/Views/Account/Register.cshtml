@model RegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body data-spy="scroll" data-target=".menu-area" data-offset="200">
    <!--wrapper page-->
    <div class="wrapper">

        <!-- Main Header -->
        <header class="main-header no-window" id="home">
            <div class="content-table header-content-fixed ">
                <div class="whoim">
                    <div class="box-line text-uppercase text-bold">
                        OUTBREAK
                    </div>
                </div>
                <div class="v-content">
                    <div class="container">
                        <h1 class="text-uppercase color-dark name">Кем будешь ты?</h1>
                        <h4 class="text-uppercase color-dark font-alt job"><span id="typed" class="typed"></span></h4>
                    </div>
                </div>
            </div>


            <!-- Main navbar -->
            <div class="menu-area">
                <div class="toogle-bars">
                    <a href="#menu-collapse" data-toggle="collapse" class="collapsed"><i class="fa fa-bars ic-open"></i> <i class="fa fa-remove ic-close"></i>Меню</a>
                </div>
                <div class="menu-collapse collapse" id="menu-collapse">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-md-6">
                                <ul class="breadcrumb main-nav nav">
                                    <li><a href="/" class="link-inpage">Домой</a></li>
                                    <li><a href="/" class="link-inpage">Правила</a></li>
                                    <li><a href="/Account/Login" class="link-inpage">Войти</a></li>
                                </ul>
                            </div>
                            <div class="col-md-3"> </div>
                        </div>
                    </div>
                </div>
            </div><!-- End Main navbar -->
        </header><!-- End Main Header -->
        <!-- SERVICES-->           
        <section class="block-section">
            <!-- SERVICES-->
            <div class="container">
                <div class="row list-work">
                    <div class="col-md-2 col-sm-2"></div>
                    <div class="col-md-8 col-sm-8">
                        <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                            <h4 class="text-center text-danger">Прочитай правила перед регистрацией!</h4>
                            <hr />
                            <div asp-validation-summary="All" class="text-danger text-center"></div>
                            <div class="form-group">
                                <label asp-for="Email" class="col-md-3 control-label"></label>
                                <div class="col-md-7">
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="commNick" class="col-md-3 control-label"></label>
                                <div class="col-md-7">
                                    <input asp-for="commNick" class="form-control" />
                                    <span asp-validation-for="commNick" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="steamLink" class="col-md-3 control-label"></label>
                                <div class="col-md-7">
                                    <input asp-for="steamLink" class="form-control" />
                                    <span asp-validation-for="steamLink" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="vkLink" class="col-md-3 control-label"></label>
                                <div class="col-md-7">
                                    <input asp-for="vkLink" class="form-control" />
                                    <span asp-validation-for="vkLink" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="col-md-3 control-label"></label>
                                <div class="col-md-7">
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="col-md-3 control-label"></label>
                                <div class="col-md-7">
                                    <input asp-for="ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3"></div>
                                <div class="checkbox flat-checkbox col-lg-9">
                                    <label for="rules">
                                        <input type="checkbox" id="rules">
                                        <span class="fa fa-check"></span>
                                        С правилами проекта ознакомлен и согласен
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-4 col-lg-12 center-block">
                                    <button id="reg" type="submit" class="btn btn-default center-block">Зарегистрироваться</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-md-2 col-sm-2"></div>
                </div>
            </div><!-- END SERVICES-->
            <div class="white-space-50"></div>
        </section>        
        <!--FOOTER-->
        <footer class="main-footer">
            <div class="container">
                <div class="folow-me">
                    До новых встреч!
                </div>
                <p class="text-center no-margin">
                    Furik, Dippy &COPY; 2017
                </p>
                <a href="#home" class="back-to-top"><i class="fa fa-angle-double-up"></i></a>
            </div>
        </footer><!--END FOOTER-->
    </div><!--End wrapper page-->
    <script>
        window.onload = function () {
            document.getElementById("reg").setAttribute("disabled", "disabled");
            var c = document.querySelector('#rules');
            c.onclick = function () {
                if (c.checked) {
                    document.getElementById("reg").removeAttribute("disabled");
                } else {
                    document.getElementById("reg").setAttribute("disabled", "disabled");
                }
            }
        }
    </script>
</body>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
